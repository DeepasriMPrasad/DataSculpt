modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CrawlOps Studio"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Windows Build"

[[workflows.workflow]]
name = "CrawlOps Studio"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3.11 -m pip install --break-system-packages fastapi uvicorn[standard] aiohttp beautifulsoup4 pydantic python-multipart crawl4ai pypdf pdfminer.six tldextract && python3.11 unified_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Windows Build"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm uninstall electron && npm install --save-dev electron electron-builder && npx vite build && npx electron-builder --win --x64 --config electron-builder.config.js --publish=never"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
