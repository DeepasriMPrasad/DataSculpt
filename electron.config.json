{
  "name": "crawlops-studio",
  "version": "1.0.0",
  "description": "Enterprise-grade web crawling desktop application",
  "main": "electron/main.js",
  "homepage": "./",
  "author": "CrawlOps Studio",
  "license": "MIT",
  "build": {
    "appId": "com.crawlops.studio",
    "productName": "CrawlOps Studio",
    "copyright": "Copyright Â© 2025 CrawlOps Studio",
    "directories": {
      "output": "dist",
      "assets": "assets"
    },
    "files": [
      "electron/**/*",
      "apps/**/*",
      "index.html",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "apps/api",
        "to": "apps/api"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}